{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "rootDir": "./src",
        "paths": {
            "@knex": ["src/db/index.ts"],
            "@config": ["./src/config/index.ts"],
            "@utils/*": ["./src/utils/*"],
            "@resources/*": ["./src/resources/*"]
        },
        "typeRoots": ["node_modules/@types", "/typings"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
