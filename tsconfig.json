{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "@knex": ["utils_knex/index.ts"],
            "@config": ["src/config/index.ts"],
            "@utils/*": ["src/utils/*"],
            "@resources/*": ["src/resources/*"]
        },
        "typeRoots": ["node_modules/@types", "/typings"]
    },
    "include": ["src/**/*"]
}
